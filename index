<script>
/* WORKBOOK DROPDOWN */
const btn=document.getElementById("workbookBtn");
const menu=document.getElementById("workbookMenu");

btn.onclick=e=>{
  e.stopPropagation();
  menu.classList.toggle("show");
};
document.body.onclick=()=>menu.classList.remove("show");

function openWorkbook(name){
  alert("Workbook: "+name);
  // later → location.href = "workbook.html?name="+name;
}

/* THUNDER EFFECT */
const canvas=document.getElementById("thunder");
const ctx=canvas.getContext("2d");

function resize(){
  canvas.width=innerWidth;
  canvas.height=innerHeight;
}
resize();
addEventListener("resize",resize);

function lightning(x,y,angle,len,depth){
  if(depth<=0) return;
  const x2=x+Math.cos(angle)*len;
  const y2=y+Math.sin(angle)*len;

  ctx.beginPath();
  ctx.moveTo(x,y);
  ctx.lineTo(x2,y2);
  ctx.strokeStyle="rgba(255,255,255,0.8)";
  ctx.lineWidth=2;
  ctx.stroke();

  lightning(x2,y2,angle+(Math.random()-.5),len*0.7,depth-1);
  lightning(x2,y2,angle-(Math.random()-.5),len*0.7,depth-1);
}

function spark(){
  ctx.clearRect(0,0,canvas.width,canvas.height);
  lightning(Math.random()*canvas.width,0,Math.PI/2,canvas.height/6,6);
  setTimeout(()=>ctx.clearRect(0,0,canvas.width,canvas.height),120);
}
setInterval(spark,3000+Math.random()*3000);
</script>

